<%- include("_header"); %>

<div class="container-md">
  <div class="row mt-4">
    <%- include("_tables"); %>
    <div class="col-10">
      <%- include("_tab", {tab: "content"}); %>
      <h4>Insert row: <%=tableName%></h4>
      <div class="border-top my-3"></div>
      <form action="<%= redirectTo %>" method="POST">
        <input type="hidden" id="tableName" name="tableName" value="<%=tableName%>" />
        <% columns.forEach((column, index) => {  %>
          <div class="mb-3">
            <label for="col:<%=column%>" class="fw-bold form-label"><%= column %></label>
            <input type="text" class="form-control" "col:<%= column %>" name="col:<%= column %>" <%= (index == 0) ? "autofocus": ""%>>
          </div>
        <% });  %>

        <div class="mb-3">
          <button type="submit" class="btn btn-success mr-2"><%="Add row"%></button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include("_footer"); %>
